<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".service.ServiceSafeActivity">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x22"
            android:text="巡检项目"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_size_3" />

        <LinearLayout
            android:id="@+id/service_safe_linear_selectName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/service_safe_txt_selectName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x34"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="请选择巡检项目"
                android:textColor="@color/txt_second_8b8d8f"
                android:textColorHint="@color/txt_hint"
                android:textSize="@dimen/text_size_3" />

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x28"
                android:layout_marginRight="@dimen/x22"
                android:src="@mipmap/more" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x22"
            android:text="巡检地点"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_size_3" />

        <LinearLayout
            android:id="@+id/service_safe_linear_selectAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/service_safe_edit_selectAddress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x34"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:gravity="center_vertical"
                android:hint="请填写巡检地点"
                android:textColor="@color/txt_second_8b8d8f"
                android:textColorHint="@color/txt_hint"
                android:textSize="@dimen/text_size_3" />

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x28"
                android:layout_marginRight="@dimen/x22"
                android:src="@mipmap/more"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x260"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x32"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x22"
                android:gravity="center"
                android:text="发现情况"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/text_size_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x22"
                android:gravity="center"
                android:text="和处置"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/text_size_3" />
        </LinearLayout>


        <EditText
            android:id="@+id/service_applyFix_edit_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x34"
            android:background="@null"
            android:enabled="false"
            android:gravity="start"
            android:hint="请详情描述发现情况及处置措施"
            android:paddingBottom="@dimen/x32"
            android:paddingTop="@dimen/x32"
            android:textColor="@color/txt_second_8b8d8f"
            android:textColorHint="@color/txt_hint"
            android:textSize="@dimen/text_size_3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginTop="@dimen/x14"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x22"
            android:text="巡检地点"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_size_3" />

        <LinearLayout
            android:id="@+id/service_safe_linear_selectTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/service_safe_txt_selectTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x34"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="请选择巡检时间"
                android:textColor="@color/txt_second_8b8d8f"
                android:textColorHint="@color/txt_hint"
                android:textSize="@dimen/text_size_3" />

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x28"
                android:layout_marginRight="@dimen/x22"
                android:src="@mipmap/more"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginTop="@dimen/x14"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x22"
            android:text="巡检人"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_size_3" />

        <LinearLayout
            android:id="@+id/service_safe_linear_selectPerson"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/service_safe_txt_selectPerson"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x34"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="请选择巡检人"
                android:textColor="@color/txt_second_8b8d8f"
                android:textColorHint="@color/txt_hint"
                android:textSize="@dimen/text_size_3" />

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x28"
                android:layout_marginRight="@dimen/x22"
                android:src="@mipmap/more"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/service_safe_txtBtn"
        style="@style/txt_btn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x66"
        android:text="提交"
        android:visibility="gone" />
</LinearLayout>
