<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_listview"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x36"
        android:paddingLeft="@dimen/x22"
        android:paddingRight="@dimen/x22"
        android:paddingTop="@dimen/x32">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_service_queryCost_detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-11-10"
                android:textColor="@color/txt_hint"
                android:textSize="@dimen/text_size_5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/item_service_queryCost_detail_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥10.00"
                android:textColor="#6ecb46"
                android:textSize="@dimen/text_size_3" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_service_queryCost_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x35"
            android:text="值班室的灯泡坏了"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_size_3" />
    </LinearLayout>
</LinearLayout>