<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.iningke.zhangzhq.mine.changePhone.ChangePhoneNextActivity">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x110"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x22"
            android:text="手  机  号"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_size_4" />

        <EditText
            android:id="@+id/changePhoneNext_edit_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:textColor="@color/txt_second_8b8d8f"
            android:textColorHint="@color/txt_hint"
            android:textSize="@dimen/text_size_4" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/background" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x110"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x22"
            android:text="验  证  码"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_size_4" />

        <EditText
            android:id="@+id/changePhoneNext_edit_verificationCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:textColor="@color/txt_second_8b8d8f"
            android:textColorHint="@color/txt_hint"
            android:textSize="@dimen/text_size_4" />

        <TextView
            android:layout_width="@dimen/x2"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x22"
            android:layout_marginTop="@dimen/x22"
            android:background="@color/background" />

        <LinearLayout
            android:id="@+id/changePhoneNext_linear_getVerificationCode"
            android:layout_width="@dimen/x250"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/changePhoneNext_txt_getVerificationCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="@color/theme"
                android:textSize="@dimen/text_size_5" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/changePhoneNext_txt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x60"
        android:background="@mipmap/btn_backgroud"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x60"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无法接收验证码"
            android:textColor="@color/txt_second_8b8d8f"
            android:textSize="@dimen/text_size_5" />

        <TextView
            android:id="@+id/changePhoneNext_txt_contactService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x10"
            android:text="联系客服"
            android:textColor="@color/theme"
            android:textSize="@dimen/text_size_5" />
    </LinearLayout>
</LinearLayout>
