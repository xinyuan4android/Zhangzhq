<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_listview"
    android:orientation="vertical"
    android:paddingBottom="@dimen/x30"
    android:paddingLeft="@dimen/x22"
    android:paddingRight="@dimen/x22"
    android:paddingTop="@dimen/x30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_myUsing_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="中心静脉导管"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_size_3"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/item_myUsing_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AS-S"
            android:textColor="@color/txt_second_8b8d8f"
            android:textSize="@dimen/text_size_3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_myUsing_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="2016-11-06"
            android:textColor="@color/txt_second_8b8d8f"
            android:textSize="@dimen/text_size_6" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/item_myUsing_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_1" />
    </LinearLayout>


</LinearLayout>