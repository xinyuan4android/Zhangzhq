<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mine.workorder.MineFixActivity">

    <include layout="@layout/common_title" />

    <android.support.design.widget.TabLayout
        android:id="@+id/workOrder_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:background="@color/white"
        tab:tabGravity="fill"
        tab:tabIndicatorColor="@color/theme"
        tab:tabSelectedTextColor="@color/theme"
        tab:tabTextColor="@color/txt_black">

    </android.support.design.widget.TabLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/split_line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/workOrder_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/x20"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>
</LinearLayout>
