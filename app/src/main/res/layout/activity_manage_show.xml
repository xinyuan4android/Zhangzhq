<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.iningke.zhangzhq.manage.ManageShowActivity">

    <include
        android:id="@+id/manage_show_include"
        layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/manage_show_include"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/theme"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/manage_show_img_showType"
                    android:layout_width="@dimen/x122"
                    android:layout_height="@dimen/x122"
                    android:layout_marginTop="@dimen/x24"
                    android:src="@mipmap/manage_oxygen"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/manage_show_txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x22"
                    android:text="10月总用水量"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_3" />

                <TextView
                    android:id="@+id/manage_txt_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x20"
                    android:text="166"
                    android:textColor="@color/white"
                    android:textSize="45sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/manage_water_shadow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#30C3CD"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x22"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x40"
                        android:text="28m³"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_1" />

                    <TextView
                        android:id="@+id/manage_txt_amount_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x20"
                        android:text="水量"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_6" />
                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/x28"
                    android:layout_marginTop="@dimen/x28"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/manage_txt_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x40"
                        android:text="￥57.8"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_1" />

                    <TextView
                        android:id="@+id/manage_txt_money_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x20"
                        android:text="水费"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_6" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/manage_linear_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x120"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x22"
                    android:paddingRight="@dimen/x22">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/manage_water_selfusing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x22"
                        android:text="自用电量数"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/manage_water_txt_selfUsing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自用电量数"
                        android:textColor="@color/txt_second_8b8d8f"
                        android:textSize="@dimen/text_size_3" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2"
                    android:background="@color/split_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x120"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x22"
                    android:paddingRight="@dimen/x22">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/manage_water_toiletusing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x22"
                        android:text="自用电量数"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/manage_water_txt_toiletUsing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自用电量数"
                        android:textColor="@color/txt_second_8b8d8f"
                        android:textSize="@dimen/text_size_3" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2"
                    android:background="@color/split_line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/manage_linear_electric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x120"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x22"
                    android:paddingRight="@dimen/x22">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/manage_water_selfusing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x22"
                        android:text="自用电量数"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/manage_electric_txt_selfUsing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自用电量数"
                        android:textColor="@color/txt_second_8b8d8f"
                        android:textSize="@dimen/text_size_3" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2"
                    android:background="@color/split_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x120"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x22"
                    android:paddingRight="@dimen/x22">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/manage_electric_elevatorusing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x22"
                        android:text="住院部电梯公摊数"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/manage_electric_txt_elevatorUsing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自用电量数"
                        android:textColor="@color/txt_second_8b8d8f"
                        android:textSize="@dimen/text_size_3" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2"
                    android:background="@color/split_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x120"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x22"
                    android:paddingRight="@dimen/x22">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/manage_electric_aircondtionerusing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x22"
                        android:text="空调公摊数"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/manage_electric_txt_airConditionerUsing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自用电量数"
                        android:textColor="@color/txt_second_8b8d8f"
                        android:textSize="@dimen/text_size_3" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2"
                    android:background="@color/split_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x120"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x22"
                    android:paddingRight="@dimen/x22">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/manage_electric_waterbucketusing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x22"
                        android:text="点开水桶公摊数"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/manage_electric_txt_waterBucketUisng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自用电量数"
                        android:textColor="@color/txt_second_8b8d8f"
                        android:textSize="@dimen/text_size_3" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2"
                    android:background="@color/split_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x120"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x22"
                    android:paddingRight="@dimen/x22">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/manage_electric_heaterusing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x22"
                        android:text="热水器公摊数"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/manage_electric_txt_heaterUsing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自用电量数"
                        android:textColor="@color/txt_second_8b8d8f"
                        android:textSize="@dimen/text_size_3" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2"
                    android:background="@color/split_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:paddingBottom="@dimen/x22"
                    android:paddingLeft="@dimen/x22"
                    android:paddingTop="@dimen/x40"
                    android:text="详细信息" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x100"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x22"
                        android:text="抄表人"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/manage_show_readPeople"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x22"
                        android:text="抄表人"
                        android:textColor="@color/txt_second_8b8d8f"
                        android:textSize="@dimen/text_size_3" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/split_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x100"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x22"
                        android:text="抄表时间"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/manage_show_readTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x22"
                        android:text="抄表人\时间"
                        android:textColor="@color/txt_second_8b8d8f"
                        android:textSize="@dimen/text_size_3" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/split_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x100"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x22"
                        android:text="上月表数"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/manage_show_lastMonthRed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x22"
                        android:text="上月表数"
                        android:textColor="@color/txt_second_8b8d8f"
                        android:textSize="@dimen/text_size_3" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/split_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x100"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x22"
                        android:text="本月表数"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/manage_show_thisMonthRed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x22"
                        android:text="本月表数"
                        android:textColor="@color/txt_second_8b8d8f"
                        android:textSize="@dimen/text_size_3" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/split_line" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
