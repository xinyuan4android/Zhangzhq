<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/common_img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="@dimen/x20"
            android:src="@mipmap/common_img_back"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/common_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_1" />

        <TextView
            android:id="@+id/common_txt_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/common_img_right"
            android:layout_centerVertical="true"
            android:padding="@dimen/x20"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:textSize="@dimen/text_size_3" />

        <ImageView
            android:id="@+id/common_img_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:padding="@dimen/x20"
            android:src="@mipmap/manage_history"
            android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>